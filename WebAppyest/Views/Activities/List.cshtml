@model IEnumerable<WebAppyest.Models.Activities>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row row-cards">
        @foreach(var item in Model)
        {
            var photoPath = "~/images/activity/" + (item.ActivityImage ?? "alt.jpg");
            var passport = "~/images//activity" + (item.ActivityManagerImage ?? "alt.jpg");
        <div class="col-sm-6 col-lg-4">
            <div class="card p-3">
                <a href="javascript:void(0)" class="mb-3">
                    <img src="@photoPath" alt="Photo by Nathan Guerrero" class="rounded">
                </a>
                <div class="d-flex align-items-center px-2">
                    <img class="avatar avatar-md mr-3" src="@passport" alt="">
                    <div>
                        <div><h5>@Html.DisplayFor(modelItem => item.ActivityTitle)</h5></div>
                        <small class="d-block text-muted">12 days ago</small>
                    </div>
                    <div class="ml-auto text-muted">
                        <a href="javascript:void(0)" class="icon"><i class="fe fe-eye mr-1"></i> @Html.DisplayFor(modelItem => item.Start)</a>
                        <a href="javascript:void(0)" class="icon d-none d-md-inline-block ml-3"><i class="fe fe-heart mr-1"></i> @Html.DisplayFor(modelItem => item.End)</a>
                    </div>
                </div>
            </div>
        </div>
        }

    </div>